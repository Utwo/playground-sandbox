{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist", "__tests__"]
}
